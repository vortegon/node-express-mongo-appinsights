{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "author": "Victor Ortegon",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir dist",
    "dev": "nodemon --exec npm run restart",
    "restart": "npm run build && npm run start",
    "start": "node ./dist/bin/start.js",
    "lint:fix": "eslint src/**/*.* --fix",
    "lint": "eslint -f json -o report.json src/**/*.*",
    "test": "jest --forceExit --detectOpenHandles --silent --setupFiles dotenv/config --testTimeout 30000 --ci --reporters=default --reporters=jest-junit --coverage"
  },
  "dependencies": {
    "applicationinsights": "^1.8.7",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "http-errors": "^1.7.3",
    "mongoose": "^5.11.15",
    "morgan": "^1.9.1",
    "winston": "^3.3.3",
    "winston-console-format": "^1.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@types/express": "^4.17.2",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0",
    "cuid": "^2.1.8",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^23.0.5",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "prettier": "^1.16.4",
    "supertest": "^6.0.1"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test-db-setup.js"
    ],
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "restoreMocks": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/bin/*.js",
      "!src/utils/dbConnect.js"
    ],
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text"
    ]
  }
}
